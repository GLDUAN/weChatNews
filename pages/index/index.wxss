.nav{
  position: fixed;
  z-index: 100;
  width: 100%;
  height: 44px;
  left: 0;
  top: 0;
  background: #fff;
  text-align: center;
  border-bottom: 1px solid #ccc;
  box-shadow: 0 0 3px #ccc;
}
.nav>text{
  display: inline-block;
  padding: 5px 10px 5px 10px;
  font-size: 17px;
}
.content{
  margin-top: 45px;
}
.selectText{
  font-size: 20px!important;
  position: relative;
  font-weight: bold;
}
