<view class='comment_component'>
  <view class='comment_left'>
    <image src='{{avatar}}'></image>
  </view>
  <view class='comment_right'>
    <view class='comment_info'>
    <text class='comment_nickname'>{{nickname}}</text>
    <view class='comment_awesome'>
      {{vote}}
      <image src='../../../images/awesome.png'></image>
    </view>
    </view>
    <view class='comment_content'>    
        {{content}}
    </view>
    <view class='commetn_reply'>
      <text class='comment_time'>{{commentTime}}</text>
      <button>回复</button>
    </view>
  </view>
  
</view>
