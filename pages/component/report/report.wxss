/* pages/component/report/report.wxss */
.content{
  width: 100%;
  height: auto;
}
.news_user{
  width: 100%;
  height: 24px;
  line-height: 24px;
  font-size: 12px;
  padding: 5px 0;
}
.news_user image{
  width: 24px;
  height: 24px;
  border-radius: 50%;
  margin: 0 8px 0 10px;
  vertical-align: top;
}
.news_title{
  width: 100%;
  padding: 0 5px;
  font-family: Arial, Helvetica, sans-serif;
  box-sizing: border-box;
}
.news_contetn{
  width: 100%;
  box-sizing: border-box;
  padding: 15px 5px;
  font-size: 0;
}
.news_contetn>view{
  display: inline-block;
}
.news_contetn .content_text{
  width: 66.66%;
  height: 65px;
  font-size: 15px;
  line-height: 22px;
  color: #777;
  box-sizing: border-box;
  padding-right: 10px;
  vertical-align: top;
  overflow: hidden;
}
.news_contetn .content_text text{
  text-overflow: ellipsis;
  white-space: normal;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.news_contetn .content_image{
  width: 33.33%;
  height: 70px;
}
.news_contetn .content_image image{
  width: 100%;
  height: 100%;
  border-radius: 3px;
}
.news-operatting{
  display: flex;
}
.news-operatting view{
  flex: 1;
  padding: 5px 0;
  box-sizing: border-box;
  font-size: 15px;
}
.news-operatting .awesome{
  text-align: left;
  padding-left: 15px;
}
.news-operatting .awesome image{
  vertical-align: top;
}
.news-operatting .comment{
  text-align: center;
}
.news-operatting .share{
  text-align: right;
  color: #232323;
}
.news-operatting .share button{
  background: #fff;
  padding:0;
  font-size: 15px;
  line-height: 0;
  outline: none;
}
.news-operatting .share button::after{
  border: none;
}
.news-operatting .share .button-hover{
  color:#fff;
}
.news-operatting image{
  width: 20px;
  height: 20px;
  vertical-align: middle;
}
.news-operatting .share image{
  width: 25px;
  height: 25px;
}